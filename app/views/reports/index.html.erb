<h1><%= t('views.common.title_edit', name: Report.model_name.human.downcase) %></h1>

<div id="reports">
  <% @reports.each do |report| %>
    <%= render report %>
    <p>
    <%= link_to t('views.common.show', name: Report.model_name.human.downcase), user_report_path(@user, report) %>
    </p>
  <% end %>
</div>
<% if current_user == @user %>
  <%= link_to t('views.common.new', name: Report.model_name.human.downcase), new_user_report_path %>
<% end %>
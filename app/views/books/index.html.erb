<p style="color: green"><%= notice %></p>

<h1><%= t('books.index.books', name: Book.model_name.human) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t('shared.back_to_show', name: Book.model_name.human), book %>
      </p>
    </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to t('books.index.new_book', name: Book.model_name.human), new_book_path %>
</nav>

<div>
  <p>
    <strong><%= User.human_attribute_name(:email) %>:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:postal_code) %>:</strong>
    <%= @user.postal_code %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:address) %>:</strong>
    <%= @user.address %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:introduction) %>:</strong>
    <%= @user.introduction %>
  </p>
</div>
<% if @user == current_user %>
  <%= link_to t('views.common.edit', name: User.model_name.human), edit_user_registration_path(@user) %>
<% end %>
<%= link_to t('views.common.back', name: User.model_name.human), users_path %>

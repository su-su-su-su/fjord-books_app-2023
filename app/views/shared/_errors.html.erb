<% if model.errors.any? %>
  <div class="error-text">
    <h2><%= t('views.common.validation_error', errors: i18n_error_count(model.errors.count), name: model.class.model_name.human.downcase) %>:</h2>
    <ul>
      <% model.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
